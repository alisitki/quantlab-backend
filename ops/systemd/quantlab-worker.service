[Unit]
Description=QuantLab Job Worker
After=network.target

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/quantlab-backend
EnvironmentFile=/etc/quantlab/worker.env
ExecStart=/usr/bin/env node core/worker/job_worker.js --poll_ms 2000 --max_retries 3 --backoff_ms 2000
Restart=always
RestartSec=2
StandardOutput=journal
StandardError=journal
LimitNOFILE=104857

[Install]
WantedBy=multi-user.target
